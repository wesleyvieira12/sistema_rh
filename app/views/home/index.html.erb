    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contato</h2>
                    <h3 class="section-subheading text-muted">Envie sua mensagem para nossa administração.</h3>
                     <%= bootstrap_flash %>
                </div>
            </div>

            <% mensagem = Mensagem.new %>

            <%= form_for(mensagem) do |f| %>

                <div class="row">
                    <div class="col-lg-12">
                        <form name="sentMessage" id="contactForm" novalidate>
                            <div class="row">

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <%= f.text_field :name, :class => "form-control", :placeholder => "Nome" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.text_field :telefone, :class => "form-control", :placeholder => "Telefone" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.text_field :endereco, :class => "form-control", :placeholder => "Endereço" %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <%= f.text_field :email, :class => "form-control", :placeholder => "E-mail" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.text_area :description, :class => "form-control", :placeholder => "Mensagem" %>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    <%= f.submit 'Enviar', :class => 'btn btn-primary' %>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            <% end %>

        </div>
    </section>
