    <!-- About Section -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Quem Somos?</h2>
                    <h3 class="section-subheading text-muted">“Somos uma startup de recrutamento e seleção, através da tecnologia conseguimos alinhar qualidade, simplicidade e comodidade. “</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        <% c = Contato.first %>
                        <% if c!=nil %>
                            <li>
                                <div class="timeline-image">
                                    <% if c.figure? %>
                                        <%= image_tag(c.figure.pic.url, :class => "img-circle img-responsive") %>
                                    <% else %>
                                        <img class="img-circle img-responsive" src="img/about/1.jpg" alt="">
                                    <% end %>
                                </div>

                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h4 class="subheading">Tudo para você!</h4>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="text-muted"> <%= c.description %> </p>
                                    </div>
                                </div>
                            </li>
                        <% else %>
                            <li>
                                <div class="timeline-image">
                                    <img class="img-circle img-responsive" src="img/about/1.jpg" alt="">
                                </div>

                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h4 class="subheading">Tudo para você!</h4>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="text-muted">Cadastre o Sobre</p>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </section>

